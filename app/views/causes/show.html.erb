<% provide :title, t("cause.view.cause") %>
<section id="page-head" class="page-head-section">
  <div class="page-head-overlay">
    <div class="container">
      <div class="row">
        <div class="page-head-content">
          <div class="page-head-style">
            <img src="assets/img/page-head-style.png" alt="image">
          </div>
          <div class="page-head-title text-uppercase">
            <h2><%= yield :title %></h2>
          </div>
          <div class="page-breadcrumb">
            <ul class="breadcrumb">
              <li class="breadcrumb-item"><a href="home-1.html"><span class="mr5 ti-home"></span><%= t "cause.view.home" %></a></li>
              <li class="breadcrumb-item active"><%= yield :title %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>

<section id="cause-details-content" class="cause-details-section">
  <div class="container">
    <div class="row section-content">
      <div class="cause-details">
        <div class="cause-details-slide">
          <%= image_tag src="cause-1.jpg" %>
          <%= image_tag src="cause-1.jpg" %>
          <%= image_tag src="cause-1.jpg" %>
        </div>
      </div>
      <div class="cause-details-content">
        <div class="row">
          <div class="col-sm-12">
            <div class="cause-goal mb40">
              <div class="progress">
                <div class="progress-bar wow Rx-width-85 animated animated" role="progressbar" data-wow-duration="0.5s" data-wow-delay=".5s" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="visibility: visible; animation-duration: 0.5s; animation-delay: 0.5s; animation-name: Rx-width-85;">
                  <span><%= ratio @cause %>%</span>
                </div>
              </div>
              <div class="count-reached-goal clearfix pb30 mt10">
                <div class="count-reached pull-left">
                  <p><%= t "cause.view.reached" %>  <%= number_to_currency @cause.reached_money %> </p>
                </div>
                <div class="count-reached pull-right">
                  <p><%= t "cause.view.goal" %>  <%= number_to_currency @cause.goal_money %> </p>
                </div>
              </div>
              <div class="donate-now-btn">
                <div class="donate-btn text-uppercase">
                 <%= link_to t("cause.view.donate_now"), new_cause_purchases_path(@cause), remote: true %>
                </div>
              </div>
              <div class="form-donate">
              </div>
            </div>
            <div class="cause-details-title">
              <div class="section-title-text mb20">
                <h2><%= @cause.title %></h2>
              </div>
              <p><i>author: </i><%= link_to @cause.user.name, user_path(@cause.user) %></p>
              <div class="row">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                  <li class="nav-item">
                    <%= link_to t("cause.view.detail"), cause_path(@cause), remote: true %>
                  </li>
                  <li class="nav-item">
                    <%= link_to t("cause.view.events"), cause_events_path(@cause), remote: true %>
                  </li>
                  <li class="nav-item">
                    <%= link_to t("cause.view.blogs"), cause_blogs_path(@cause), remote: true %>
                  </li>
                  <li class="nav-item">
                    <%= link_to t("cause.view.list_donators"), cause_donations_path(@cause), remote: true %>
                  </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                  <div class="row">
                    <div id="my-cause-content">
                      <div><%= render_with_hashtags @cause.detail.html_safe %></div>
                    </div>
                    <div id="will-page">
                    </div>
                    <div id="export-csv">
                    </div>
                  </div>
                  <div class="row">
                    <div id="create-item"></div>
                  </div>
                </div>
              </div>

            </div>
          </div>
          <div class="col-sm-4">
            <div class="side-bar-content ml15">
              <br>
            </div>
          </div>
        </div>
      </div>
      <%= render partial: "shared/share_to", locals: { title: @cause.title, des: @cause.title, url: cause_url(@cause) } %>
      <%= render partial: "shared/comment_fb", locals: { post_link: cause_url(@cause) } %>
    </div>
  </div>
</section>
