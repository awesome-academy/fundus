<header>
  <div class="header-top-bg">
    <div class="container">
      <div class="row">
        <div class="header-top">
          <div class="head-top-info pull-left">
            <ul class="top-info">
              <li><%= image_tag src="call.png" %><%= t "application.header.phone" %></li>
              <li><%= image_tag src="inbox.png" %><%= t "application.header.email" %></li>
            </ul>
          </div>
          <!-- /head-top-info -->
          <div class="header-social pull-right">
            <div class="social">
              <ul class="social-list">
                <li><a href="#"><span class="ti-facebook"></span></a></li>
                <li><a href="#"><span class="ti-twitter"></span></a></li>
                <li><a href="#"><span class="ti-google"></span></a></li>
                <li><a href="#"><span class="ti-instagram"></span></a></li>
              </ul>
            </div>
          </div>
          <!-- /header-social -->
        </div><!-- /header-top -->
      </div><!-- /row -->
    </div><!-- /container -->
  </div>
  <div class="menu-bar">
    <div class="container">
      <div class="row">
        <nav class="navbar">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <a class="navbar-brand"><%= image_tag src="logo.png", class: "fundus-logo" %></a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to t("application.header.home"), root_path %></li>
              <li><%= link_to t("application.header.cause"), causes_path  %>
              </li>
              <li><%= link_to t("application.header.event"), events_path %>
              </li>
              <li><%= link_to t("application.header.blog"), blogs_path %>
              </li>
              <li><%= link_to t("application.header.contact"), contact_path %></li>
              <li><%= link_to t("application.header.about"), about_path %></li>
              <% if user_signed_in? %>
              <li><%= link_to current_user.name, "#" %>
                <ul class="menu-dropdown">
                  <li><%= link_to t("application.header.change_pw"), edit_user_registration_path %></li>
                  <li><%= link_to t("application.header.sign_out"), destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
              <% else %>
              <li><%= link_to t("application.header.sign_in"), new_user_session_path %></li>
              <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->
          <div class="home-donate donate-btn-1 text-uppercase">
            <a href="donation.html">donate now</a>
          </div>
          <div id="sb-search" class="sb-search " >
                <form action="#" method="post">
                 <input class="sb-search-input " onkeyup="buttonUp();" placeholder="Enter Your Search Word..." type="search" value="" name="search" id="search">
               <input class="sb-search-submit" type="submit"  value="">
               <span class="sb-icon-search"><i class="ti-search"></i></span>
                </form>
          </div>
        </nav>
        <div class="wrap">
          <!--MENU-->
          <div id="main-menu">
            <div class="menu-btn">
              <div class="menu-btn-line menu-btn-line-1"></div>
              <div class="menu-btn-line menu-btn-line-2"></div>
              <div class="menu-btn-line menu-btn-line-3"></div>
            </div>
            <div class="moduletable_menu">
              <ul class="nav menu">
               <li><%= link_to "Home", root_path %></li>
               <li><%= link_to "Causes", causes_path  %>
               </li>
               <li><%= link_to "Events", events_path %>
               </li>
               <li><%= link_to "Blogs", blogs_path %>
               </li>
               <li><%= link_to "Contact", contact_path %></li>
               <li><%= link_to "About us", about_path %></li>
               <% if user_signed_in? %>
               <li><%= link_to current_user.name, "#" %>
                <ul class="menu-dropdown">
                  <li><%= link_to t("application.header.change_pw"), edit_user_registration_path %></li>
                  <li><%= link_to t("application.header.sign_out"), destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
              <% else %>
              <li><%= link_to t("application.header.sign_in"), new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <!-- END menu -->
      </div><!--/wrap  -->
    </div><!--/row  -->
  </div><!--/container  -->
</div><!--/menu-bar  -->
</header>
<!-- End of Header -->
