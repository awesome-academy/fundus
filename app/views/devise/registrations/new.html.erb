<% provide :title, t("devise.registrations.sign_up") %>

<section id="way-help" class="way-help-section">
  <div class="container">
    <div class="row section-content">

      <div class="section-title text-center">
        <div class="section-title-text text-uppercase">
          <h2><%= t "devise.registrations.sign_up" %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 form-group">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", facebookauth_callbacks: resource %>
            <div class="field">
              <%= f.label t("devise.registrations.name") %> <br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label t("devise.registrations.email") %><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label t("devise.registrations.password") %>
              <% if @minimum_password_length %>
                <em><%= t "devise.registrations.minium_pw_length", minimum_password_length:@minimum_password_length %></em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label t("devise.registrations.password_confirmation") %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit t("devise.registrations.sign_up"), class: "btn btn-primary"%>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
          <%= link_to "Log in with Facebook?", "#" %><br>
        </div>
      </div>
    </div>
  </div>
</section>
