<% provide :title, t("devise.sessions.sign_in") %>
<section id="way-help" class="way-help-section">
  <div class="container">
    <div class="row section-content">

      <div class="section-title text-center">
        <div class="section-title-text text-uppercase">
          <h2><%= t "devise.sessions.sign_in" %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 form-group">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label t("devise.sessions.email") %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label t("devise.sessions.password") %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label t("devise.sessions.remember_me") %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit t("devise.sessions.sign_in"), class: "btn btn-primary" %>
            </div>
          <% end %>
          <%= link_to t("devise.sessions.sign_in_FB"), "#" %><br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
