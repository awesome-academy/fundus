 <%= form_for cause, url: cadmin_causes_path do |f| %>
 <div class="field">
  <%= f.label :title %> <br />
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="field">
  <%= f.label :detail %> <br />
  <%= f.text_field :detail, class: "form-control" %>
</div>

<div class="field">
  <%= f.label :end_time %><br />
  <%= f.date_field :end_time, class: "form-control" %>
</div>

<div class="field">
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name , options = {},html_options = {class: "form-control"} %><br>
</div>

<div class="field">
  <%= f.label :user %><br />
  <%= f.collection_select :user_id, User.all, :id, :name , options = {},html_options = {class: "form-control"} %><br>
</div>

<div class="field">
  <%= f.label :goal_money %><br />
  <%= f.text_field :goal_money, class: "form-control" %>
</div>

<div class="actions">
  <%= f.submit "Create", class: "btn btn-primary"%>
</div>
<% end %>
