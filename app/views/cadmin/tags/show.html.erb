<% provide :title, t("cadmin.view.tag.title") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 form-group">

    <%= label_tag t("cadmin.view.tag.name") %><br />
    <%= text_field_tag :name, @tag.name, class: "form-control", disabled: "disabled" %>

    <%= label_tag t("cadmin.view.tag.causes") %><br />
    <%= text_field_tag :causes, @tag.causes.count, class: "form-control", disabled: "disabled" %>

    <%= label_tag t("cadmin.view.tag.events") %><br />
    <%= text_field_tag :events, @tag.events.count, class: "form-control", disabled: "disabled" %>

    <%= label_tag t("cadmin.view.tag.blogs") %><br />
    <%= text_field_tag :blogs, @tag.blogs.count, class: "form-control", disabled: "disabled" %>
  </div>
</div>
</div>

