<% provide :title, t("cadmin.view.comment.title") %>
<div class="row">
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 form-group">

   <%= form_for @comment do |f| %>
   <div class="field">
    <%= f.label t("cadmin.view.comment.content") %> <br />
    <%= f.text_field :content, class: "form-control", disabled: "disabled" %>
  </div>

  <div class="field">
    <%= f.label t("cadmin.view.comment.parent_id") %> <br />
    <%= f.text_field :parent_id, class: "form-control", disabled: "disabled" %>
  </div>

  <div class="field">
    <%= f.label t("cadmin.view.comment.blog_id") %> <br />
    <%= f.text_field :blog_id, class: "form-control", disabled: "disabled" %>
  </div>

  <div class="field">
    <%= f.label  t("cadmin.view.comment.user_id") %> <br />
    <%= f.text_field :user_id, class: "form-control", disabled: "disabled" %>
  </div>
  <% end %>
</div>
</div>
</div>

