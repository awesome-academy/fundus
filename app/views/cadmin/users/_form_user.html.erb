<%= form_for user,  url: f_user do |f| %>
<div class="field">
  <%= f.label t("devise.registrations.name") %> <br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
</div>

<div class="field">
  <%= f.label t("cadmin.view.user.role") %> <br />
  <%= f.select :role, [ 'member' , 'admin'], :prompt => 'Select One', class: "form-control" %>
</div>

<div class="field">
  <%= f.label t("devise.registrations.email") %><br />
  <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
</div>

<div class="field">
  <%= f.label t("devise.registrations.password") %>
  <% if @minimum_password_length %>
  <em><%= t "devise.registrations.minium_pw_length", minimum_password_length:@minimum_password_length %></em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
</div>

<div class="field">
  <%= f.label t("devise.registrations.password_confirmation") %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
</div>
<div class="actions">
  <%= f.submit yield(:button_text), class: "btn btn-primary"%>
</div>
<% end %>
