<%= form_for @blog do |f| %>
  <%= f.label t("blog.view.title") %><br>
  <%= f.text_field :title, class: "form-control" %><br>

  <%= f.label t("blog.view.content") %><br>
  <%= f.text_area :content, class: "form-control", rows: 10 %><br>
  <%= f.submit t("blog.view.post"), class: "btn btn-primary" %><br>
<% end %>
