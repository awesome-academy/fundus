.fundus-logo {
  height: inherit;
}

#map {
  height: 300px;
  width: auto;
}

.search-component {
  display: inherit;
  max-width: 150px;
}

.social-list li {
  display: inline-block;
}

.footer-gallery li {
  display: inline-block;
}

.nav li form {
  padding: 20px 20px;
  color: #0e0e0e;
  position: relative;
}

.social-share-button .ssb-icon {
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 18px 18px;
  display: inline-block;
  height: 18px;
  width: 18px;
}

.icon-fb{
  background-image: url(<%= asset_path('social-share/facebook.svg') %>);
}

[data-notify="progressbar"] {
  margin-bottom: 0px;
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 5px;
}
